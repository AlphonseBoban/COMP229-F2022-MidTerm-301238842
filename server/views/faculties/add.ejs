<% include ../partials/header.ejs %>

<!-- Content for the add page-->

<div class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10"></div>
    <h1><%= title %></h1>

    <form class="form" method="POST">
        <div class="form-group">
        <label for="IdTextField">Faculty ID</label>    
       <input type="number" class="form-control"
       id="IdTextField"
       placeholder="Enter the ID  of the faculty"
       name="Facultyid" required>
        </div>
    
        <div class="form-group">
        <label for="NameTextField">Faculty Name</label>    
        <input type="text" class="form-control"
        id="NameTextField"
        placeholder="Enter the name of the faculty"
        name="Facultyname" required>
        </div>

        <div class="form-group">
            <label for="DeptTextField">Department</label>    
            <input type="text" class="form-control"
            id="DeptTextField"
            placeholder="Enter the department"
            name="Department" required>
        </div>

        <div class="form-group">
            <label for="SubTextField">Subject</label>    
            <input type="text" class="form-control"
            id="SubTextField"
            placeholder="Enter the subject"
            name="Subject" required>
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-check-square-o"></i> Submit
          </button>
          <a href="/faculties" class="btn btn-warning"
            ><i class="fa fa-undo"></i> Cancel</a>
    </form>
    </div>
</div>


<% include ../partials/footer.ejs %>